# Banco de Dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hallyuhub?schema=public"

# App
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# NextAuth.js Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth for NextAuth (sign-in with Google)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (optional, for password reset emails)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-email-password"
# SMTP_FROM="noreply@hallyuhub.com.br"

# Filmography Sync Configuration
FILMOGRAPHY_SYNC_ENABLED=true
FILMOGRAPHY_SYNC_ON_CREATE=true
FILMOGRAPHY_SYNC_CONCURRENCY=3
FILMOGRAPHY_CACHE_TTL=86400

# Cron Job Security (OBRIGATÓRIO para produção)
# Generate with: openssl rand -hex 32
CRON_SECRET="your-secure-cron-token-here"

# AI Content Generation (pelo menos uma chave é necessária)
# Gemini (Recomendado - mais barato)
GEMINI_API_KEY="your-gemini-api-key"
# OpenAI (GPT-4, etc)
OPENAI_API_KEY="your-openai-api-key"
# Anthropic Claude
ANTHROPIC_API_KEY="your-anthropic-api-key"
# Ollama (local, opcional)
OLLAMA_BASE_URL="http://localhost:11434"

# Slack Notifications (opcional)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Secrets (Exemplos para GitHub Actions)
# SSH_HOST=
# SSH_USER=
# SSH_KEY=
