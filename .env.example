# Banco de Dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hallyuhub?schema=public"

# App
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# NextAuth.js Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth for NextAuth (sign-in with Google)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (optional, for password reset emails)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-email-password"
# SMTP_FROM="noreply@hallyuhub.com.br"

# Filmography Sync Configuration
FILMOGRAPHY_SYNC_ENABLED=true
FILMOGRAPHY_SYNC_ON_CREATE=true
FILMOGRAPHY_SYNC_CONCURRENCY=3
FILMOGRAPHY_CACHE_TTL=86400

