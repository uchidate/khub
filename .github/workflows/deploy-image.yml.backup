name: Build and Deploy Image

# ‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó
# ‚ïë  PROCESSO DE DEPLOY - LEIA ANTES DE MODIFICAR                  ‚ïë
# ‚ïë                                                                ‚ïë
# ‚ïë  LOCAL ‚Üí STAGING ‚Üí PRODUCAO                                    ‚ïë
# ‚ïë          (develop)   (main)                                    ‚ïë
# ‚ïë                                                                ‚ïë
# ‚ïë  1. Desenvolva localmente                                      ‚ïë
# ‚ïë  2. Push para develop ‚Üí Deploy automatico em STAGING (:3001)   ‚ïë
# ‚ïë  3. VALIDE EM STAGING antes de mergear para main               ‚ïë
# ‚ïë  4. PR develop ‚Üí main ‚Üí Deploy em PRODUCAO (:3000)             ‚ïë
# ‚ïë                                                                ‚ïë
# ‚ïë  Ver: PROCESSO-DEPLOY.md na raiz do projeto                    ‚ïë
# ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  # ============================================
  # Job 0: Verificar Processo (informativo)
  # ============================================
  check-process:
    name: üìã Check Deploy Process
    runs-on: ubuntu-latest
    steps:
      - name: Aviso - Push direto para main
        if: github.ref == 'refs/heads/main' && github.event_name == 'push'
        run: |
          echo "::warning::ATENCAO: Push direto para main detectado!"
          echo "::warning::Processo recomendado: develop -> staging -> main"
          echo "::warning::Certifique-se de ter validado em STAGING primeiro."
          echo ""
          echo "Processo correto:"
          echo "  1. Push para develop"
          echo "  2. Validar em staging (porta 3001)"
          echo "  3. Criar PR: develop -> main"
          echo "  4. Merge apos validacao"

      - name: Info - Deploy para Staging
        if: github.ref == 'refs/heads/develop'
        run: |
          echo "Deploy para STAGING (develop branch)"
          echo "Apos o deploy, valide em http://servidor:3001"
          echo "Se OK, crie um PR: develop -> main"

      - name: Info - Pull Request
        if: github.event_name == 'pull_request'
        run: |
          echo "Validando Pull Request"
          echo "Apenas validacao sera executada (sem deploy)"

  # ============================================
  # Job 1: Validacao (lint, typecheck, build)
  # ============================================
  validate:
    name: üîç Validate Code
    needs: check-process
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Generate Prisma Client
        run: npx prisma generate

      - name: Run ESLint
        run: npx eslint app/ lib/ --max-warnings 10

      - name: TypeScript type check
        run: npx tsc --noEmit

      - name: Build Next.js (validation)
        env:
          SKIP_BUILD_STATIC_GENERATION: "1"
          DATABASE_URL: "file:./build.db"
        run: npm run build

  # ============================================
  # Job 2: Build e Push da Imagem Docker
  # ============================================
  build-and-push:
    name: üê≥ Build Docker Image
    needs: validate
    runs-on: ubuntu-latest
    # S√≥ faz push para main/develop (n√£o para PRs)
    if: github.event_name != 'pull_request'
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to the Container registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata (tags, labels) for Docker
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=raw,value=latest,enable=${{ github.ref == 'refs/heads/main' }}
            type=raw,value=staging,enable=${{ github.ref == 'refs/heads/develop' }}
            type=sha,value=${{ github.sha }}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # ============================================
  # Job 3a: Deploy para STAGING (branch develop)
  # ============================================
  deploy-staging:
    name: üü° Deploy STAGING (:3001)
    needs: build-and-push
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/develop' && github.event_name != 'pull_request'

    steps:
      - name: Notify Slack - Deploy Started
        run: |
          curl -X POST -H 'Content-type: application/json' \
            --data '{
              "blocks": [
                {
                  "type": "header",
                  "text": {
                    "type": "plain_text",
                    "text": "üü° Deploy STAGING Iniciado"
                  }
                },
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "mrkdwn",
                      "text": "*Ambiente:*\nStaging (:3001)"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Branch:*\n`develop`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Commit:*\n`${{ github.sha }}`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Autor:*\n${{ github.actor }}"
                    }
                  ]
                },
                {
                  "type": "context",
                  "elements": [
                    {
                      "type": "mrkdwn",
                      "text": "üîó <${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}|Ver workflow>"
                    }
                  ]
                }
              ]
            }' \
            ${{ secrets.SLACK_WEBHOOK_DEPLOYS }}

      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Copy files to server
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: "docker-compose.staging.yml,docker-compose.prod.yml,robust-deploy.sh,.env.staging.example,.env.production.example"
          target: "/var/www/hallyuhub"
          strip_components: 0

      - name: Deploy to STAGING
        id: deploy
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            cd /var/www/hallyuhub
            echo "========================================"
            echo "  DEPLOY STAGING - Porta 3001"
            echo "========================================"
            bash robust-deploy.sh --pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:staging --staging
            echo ""
            echo "Staging deployado! Valide em http://servidor:3001"
            echo "Se OK, crie PR: develop -> main"

      - name: Notify Slack - Deploy Success
        if: success()
        run: |
          curl -X POST -H 'Content-type: application/json' \
            --data '{
              "blocks": [
                {
                  "type": "header",
                  "text": {
                    "type": "plain_text",
                    "text": "‚úÖ Deploy STAGING Conclu√≠do"
                  }
                },
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "mrkdwn",
                      "text": "*Ambiente:*\nStaging (:3001)"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Branch:*\n`develop`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Commit:*\n`${{ github.sha }}`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Autor:*\n${{ github.actor }}"
                    }
                  ]
                },
                {
                  "type": "section",
                  "text": {
                    "type": "mrkdwn",
                    "text": "üéØ *Pr√≥ximos passos:*\n1. Validar em staging\n2. Criar PR: `develop` ‚Üí `main`"
                  }
                },
                {
                  "type": "context",
                  "elements": [
                    {
                      "type": "mrkdwn",
                      "text": "üîó <${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}|Ver workflow>"
                    }
                  ]
                }
              ]
            }' \
            ${{ secrets.SLACK_WEBHOOK_DEPLOYS }}

      - name: Notify Slack - Deploy Failed
        if: failure()
        run: |
          curl -X POST -H 'Content-type: application/json' \
            --data '{
              "blocks": [
                {
                  "type": "header",
                  "text": {
                    "type": "plain_text",
                    "text": "‚ùå Deploy STAGING Falhou"
                  }
                },
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "mrkdwn",
                      "text": "*Ambiente:*\nStaging (:3001)"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Branch:*\n`develop`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Commit:*\n`${{ github.sha }}`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Autor:*\n${{ github.actor }}"
                    }
                  ]
                },
                {
                  "type": "section",
                  "text": {
                    "type": "mrkdwn",
                    "text": "‚ö†Ô∏è *A√ß√£o necess√°ria:*\nVerifique os logs do workflow para identificar o erro."
                  }
                },
                {
                  "type": "context",
                  "elements": [
                    {
                      "type": "mrkdwn",
                      "text": "üîó <${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}|Ver logs do workflow>"
                    }
                  ]
                }
              ]
            }' \
            ${{ secrets.SLACK_WEBHOOK_DEPLOYS }}

  # ============================================
  # Job 3b: Deploy para PRODUCAO (branch main)
  # ============================================
  deploy-production:
    name: üü¢ Deploy PRODUCTION (:3000)
    needs: build-and-push
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name != 'pull_request'

    steps:
      - name: Notify Slack - Deploy Started
        run: |
          curl -X POST -H 'Content-type: application/json' \
            --data '{
              "blocks": [
                {
                  "type": "header",
                  "text": {
                    "type": "plain_text",
                    "text": "üü¢ Deploy PRODUCTION Iniciado"
                  }
                },
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "mrkdwn",
                      "text": "*Ambiente:*\nProduction (:3000)"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Branch:*\n`main`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Commit:*\n`${{ github.sha }}`"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Autor:*\n${{ github.actor }}"
                    }
                  ]
                },
                {
                  "type": "context",
                  "elements": [
                    {
                      "type": "mrkdwn",
                      "text": "üîó <${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}|Ver workflow>"
                    }
                  ]
                }
              ]
            }' \
            ${{ secrets.SLACK_WEBHOOK_DEPLOYS }}

      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Copy files to server
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: "docker-compose.staging.yml,docker-compose.prod.yml,robust-deploy.sh,.env.staging.example,.env.production.example"
          target: "/var/www/hallyuhub"
          strip_components: 0

      - name: Deploy to PRODUCTION
        id: deploy
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            cd /var/www/hallyuhub
            echo "========================================"
            echo "  DEPLOY PRODUCAO - Porta 3000"
            echo "========================================"
            echo "IMPORTANTE: Certifique-se de ter validado em STAGING primeiro!"
            bash robust-deploy.sh --pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest --prod
            echo ""
            echo "Producao deployada! http://servidor:3000"

      - name: Notify Slack - Deploy Success
        if: success()
        run: |
          curl -X POST -H 'Content-type: application/json' \
